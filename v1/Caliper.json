{
  "@id" : "http://purl.imsglobal.org/ctx/caliper/v1/Caliper",
  "@context" : [
    {
      "_comment": "namespaces",

      "@vocab": "http://purl.imsglobal.org/caliper/v1/",
      "as" : "http://activitystrea.ms/2.0/",
      "caliper": "http://purl.imsglobal.org/caliper/v1/",
      "rdf" : "http://www.w3.org/1999/02/22-rdf-syntax-ns#", 
      "rdfs": "http://www.w3.org/2000/01/rdf-schema#",
      "prov": "http://www.w3.org/ns/prov#",
      "schema" : "http://schema.org/", 

      "org" : "http://www.w3.org/ns/org#", 
      "xs" : "http://www.w3.org/2001/XMLSchema#", 
      "liscm" : "http://purl.imsglobal.org/vocab/lis/v2/liscm#", 
      "lisp" : "http://purl.imsglobal.org/vocab/lis/v2/pm#"

    },
    {
      "_comment": "Validation Context",

      "caliper:requiredPropertyValueForSequence": {
        "@type":      "rdf:Property",
        "_comment":   "list of property-value pairs that are considered required when a sequence of json-ld are recieved",
        "rdfs:range": "xsd:list"
      },
      "caliper:optionalPropertyValueForSequence": {
        "@type":      "rdf:Property",
        "_comment":   "list of property-value pairs that are considered required when a sequence of json-ld are recieved",
        "rdfs:range": "xsd:list"
      },

      "caliper:requiredProperty": {
        "@type":      "rdf:Property",
        "_comment":   "list of all properties required for a type",
        "rdfs:range": "xsd:list"
      },
      "caliper:requiredWhen": {
        "@type":      "rdf:Property",
        "_comment":   "properties that are only required in some situations (otherwise they are optional)",
        "rdfs:range": "xsd:list"
      },

      "caliper:optionalProperty": {
        "@type":      "rdf:Property",
        "_comment":   "list of properties that are to be flagged as optional by validation for a type",
        "rdfs:range": "xsd:list"
      }

    },
    {
      "_comment": "Caliper common properties",

      "actor": "as:actor",
      "action": "as:verb",
      "object": "as:object",
      "startedAtTime": "prov:startedAtTime",
      "endedAtTime": "prov:endedAtTime",

      "name" : "schema:name",

      "generated": "prov:generated",
      "target": "caliper:target",
      "edApp": "caliper:edApp",
      "group": "caliper:group"
    },
    {
      "_comment": "Entities",

      "caliper:Entity" : {
        "_comment":   "",
        "caliper:optionalProperty": [
          "name",
          "description",
          "extensions",
          "dateCreated",
          "dateModified"
        ]
      },

      "caliper:Session" : {
        "_comment":   "",
        "rdfs:subClassOf": "caliper:Entity",
        "caliper:requiredProperty": [
          {"@id": "startedAtTime", "caliper:requiredWhen": "$parent.action=LoggedIn"}
          {"@id": "endedAtTime", "caliper:requiredWhen": "$parent.action=LoggedOut"}
        ],
        "caliper:optionalProperty": [
          "actor",
          "duration"
        ]
      },

      "caliper:Result" : {
        "_comment":   "",
        "rdfs:subClassOf": "caliper:Entity",
        "caliper:optionalProperty": [
          "assignable",
          "actor",
          "normalScore",
          "penaltyScore",
          "extraCreditScore",
          "totalScore",
          "curvedTotalScore",
          "curveFactor",
          "comment",
          "scoredBy"
        ]
      },

      "caliper:LearningObjective" : {
        "_comment":   "",
        "rdfs:subClassOf": "caliper:Entity",
      },

      "caliper:SoftwareApplication" : {
        "_comment":   "",
        "rdfs:subClassOf": "caliper:Entity",
      },
      "caliper:lis/Person" : {
        "_comment":   "",
        "rdfs:subClassOf": "caliper:Entity",
        "caliper:optionalProperty": [
          "hasMembership"
        ]
      },
      "caliper:Organization" : {
        "_comment":   "",
        "rdfs:subClassOf": "caliper:Entity",
        "caliper:optionalProperty": [
          "membership",
          "subOrganizationOf"
        ]
      },

      "caliper:lis/Group" : {
        "_comment":   "",
        "rdfs:subClassOf": "caliper:Entity",
        "caliper:optionalProperty": [
          "credits",
          "category",
          "academicSession",
          "membership",
          "subOrganizationOf"
        ]
      },
      "caliper:lis/Membership" : {
        "_comment":   "",
        "rdfs:subClassOf": "caliper:Entity",
        "caliper:optionalProperty": [
          "member",
          "organization",
          "roles",
          "status"
        ]
      },

      "caliper:lis/CourseOffering" : {
        "_comment":   "",
        "rdfs:subClassOf": "caliper:Entity",
        "caliper:optionalProperty": [
          "academicSession",
          "membership",
          "subOrganizationOf"
        ]
      },
      "caliper:lis/CourseSection" : {
        "_comment":   "",
        "rdfs:subClassOf": "caliper:CourseOffering",
        "caliper:optionalProperty": [
          "category"
        ]
      },

      "caliper:DigitalResource" : {
        "_comment":   "",
        "rdfs:subClassOf": "caliper:Entity",
        "caliper:optionalProperty": [
          "objectType",
          "alignedLearningObjective",
          "keywords",
          "isPartOf",
          "datePublished",
          "version"
        ]
      },
      "caliper:AssignableDigitalResource" : {
        "_comment":   "",
        "rdfs:subClassOf": "caliper:DigitalResource",
        "caliper:optionalProperty": [
          "dateToActivate",
          "dateToShow",
          "dateToStartOn",
          "dateToSubmit",
          "maxAttempts",
          "maxSubmits",
          "maxScore"
        ]
      },
      "caliper:Frame" : {
        "_comment":   "",
        "rdfs:subClassOf": "caliper:DigitalResource",
        "caliper:optionalProperty": [
          "index"
        ]
      },
      "caliper:WebPage" : {
        "_comment":   "",
        "rdfs:subClassOf": "caliper:DigitalResource"
      },

      "caliper:MediaLocation" : {
        "_comment":   "",
        "rdfs:subClassOf": "caliper:DigitalResource",
        "caliper:optionalProperty": [
          "currentTime"
        ]
      },
      "caliper:MediaObject" : {
        "_comment":   "",
        "rdfs:subClassOf": "caliper:DigitalResource",
        "caliper:optionalProperty": [
          "duration"
        ]
      },
      "caliper:AudioObject" : {
        "_comment":   "",
        "rdfs:subClassOf": "caliper:MediaObject",
        "caliper:optionalProperty": [
          "duration",
          "volumeMin",
          "volumeMax",
          "volumeLevel",
          "muted"
        ]
      },
      "caliper:VideoObject" : {
        "_comment":   "",
        "rdfs:subClassOf": "caliper:MediaObject"
      },

      "caliper:Annotation" : {
        "_comment":   "",
        "rdfs:subClassOf": "caliper:Entity",
        "caliper:optionalProperty": [
          "annotated"
        ]
      },
      "caliper:BoorkmarkAnnotation" : {
        "_comment":   "",
        "rdfs:subClassOf": "caliper:Annotation",
        "caliper:optionalProperty": [
          "bookmarkNotes"
        ]
      },
      "caliper:HighlightAnnotation" : {
        "_comment":   "",
        "rdfs:subClassOf": "caliper:Annotation",
        "caliper:optionalProperty": [
          "selection",
          "selectionText"
        ]
      },
      "caliper:SharedAnnotation" : {
        "_comment":   "",
        "rdfs:subClassOf": "caliper:Annotation",
        "caliper:optionalProperty": [
          "withAgents"
        ]
      },
      "caliper:TagAnnotation" : {
        "_comment":   "",
        "rdfs:subClassOf": "caliper:Annotation",
        "caliper:optionalProperty": [
          "tags"
        ]
      },

      "caliper:Response" : {
        "_comment":   "",
        "rdfs:subClassOf": "caliper:Entity",
        "caliper:optionalProperty": [
          "assignable",
          "actor",
          "attempt",
          "startedAtTime",
          "endedAtTime",
          "duration"
        ]
      },
      "caliper:Response/FillinBlankResponse" : {
        "_comment":   "",
        "rdfs:subClassOf": "caliper:Response",
        "caliper:optionalProperty": [
          "values"
        ]
      },
      "caliper:Response/MultipleResponseResponse" : {
        "_comment":   "",
        "rdfs:subClassOf": "caliper:Response",
        "caliper:optionalProperty": [
          "values"
        ]
      },
      "caliper:Response/SelectTextResponse" : {
        "_comment":   "",
        "rdfs:subClassOf": "caliper:Response",
        "caliper:optionalProperty": [
          "values"
        ]
      },
      "caliper:Response/MultipleChoiceResponse" : {
        "_comment":   "",
        "rdfs:subClassOf": "caliper:Response",
        "caliper:optionalProperty": [
          "value"
        ]
      },
      "caliper:Response/TrueFalseResponse" : {
        "_comment":   "",
        "rdfs:subClassOf": "caliper:Response",
        "caliper:optionalProperty": [
          "value"
        ]
      }

    },
    {
      "_comment": "Assessment MP",

      "caliper:Attempt" : {
        "_comment":   "",
        "rdfs:subClassOf": "caliper:Entity",
        "caliper:optionalProperty": [
          "assignable",
          "actor",
          "count",
          "startedAtTime",
          "endedAtTime",
          "duration"
        ]
      },

      "caliper:AssessmentItem" : {
        "_comment":   "",
        "rdfs:subClassOf": "caliper:AssignableDigitalResource",
        "caliper:optionalProperty": [
          "isTimeDependent"
        ]
      },

      "caliper:Assessment" : {
        "_comment":   "",
        "rdfs:subClassOf": "caliper:DigitalResource",
        "caliper:optionalProperty": [
          "assessmentItems"
        ]
      }

    },
    {
      "_comment": "Events",

      "caliper:Event" : {
        "_comment":   "Core caliper event structure and base class for all events",
        "caliper:requiredProperty": [
          "actor",
          "action"
          "object",
          "startedAtTime"
        ],
        "caliper:optionalProperty": [
          "target",
          "generated",
          "endedAtTime",
          "edApp",
          "group"
        ]
      },

      "caliper:AssessmentEvent" : {
        "_comment":   "",
        "rdfs:subClassOf": "caliper:Event",
        "caliper:requiredPropertyValueForSequence": ["action=Started", "action=Submitted"],
        "caliper:optionalPropertyValueForSequence": ["action=Paused", "action=Restarted"],
        "caliper:requiredProperty": [
          {
            "@id": "endedAtTime", 
            "caliper:requiredWhen": "action=Submitted"
          }        
        ]
      },
      "caliper:AssessmentItemEvent" : {
        "_comment":   "",
        "rdfs:subClassOf": "caliper:Event",
        "caliper:requiredPropertyValueForSequence": ["action=Started", "action=Completed"],
        "caliper:optionalPropertyValueForSequence": ["action=Skipped", "action=Reviewed", "action=Viewed"],
        "caliper:requiredProperty": [
          {
            "@id": "endedAtTime", 
            "caliper:requiredWhen": "action=Completed"
          }        
        ]
      },
      "caliper:AnnotationEvent" : {
        "_comment":   "",
        "rdfs:subClassOf": "caliper:Event",
        "caliper:requiredPropertyValueForSequence": ["action=Bookmarked", "action=Highlighted", "action=Shared", "action=Tagged"]
      },
      "caliper:AssignableEvent" : {
        "_comment":   "",
        "rdfs:subClassOf": "caliper:Event",
        "caliper:requiredPropertyValueForSequence": ["action=Started", "action=Completed"],
        "caliper:optionalPropertyValueForSequence": ["action=Activated", "action=Deactivated", "action=Showed", "action=Hid", "action=Reviewed", "action=Abandoned"]
      },
      "caliper:MediaEvent" : {
        "_comment":   "",
        "rdfs:subClassOf": "caliper:Event",
        "caliper:requiredPropertyValueForSequence": ["action=Started", "action=Resumed", "action=Paused", "action=Ended"],
        "caliper:optionalPropertyValueForSequence": ["action=OpenedPopout", "action=ClosedPopout", "action=EnteredFullscreen", "action=ExitedFullscreen", "action=ChangedSize", "action=ChangedResolution", "action=Rewound", "action=ForwardedTo", "action=JumpedTo", "action=ChangedSpeed", "action=Muted", "action=Unmuted", "action=ChangedVolume", "action=EnabledCloseCaptioning", "action=DisabledCloseCaptioning"],
      },
      "caliper:NavigationEvent" : {
        "_comment":   "",
        "rdfs:subClassOf": "caliper:Event",
        "caliper:optionalProperty": [
          "navigatedFrom"
        ]
      },
      "caliper:OutcomeEvent" : {
        "_comment":   "",
        "rdfs:subClassOf": "caliper:Event",
        "caliper:requiredPropertyValueForSequence": ["action=Graded"]
      },
      "caliper:ReadingEvent" : {
        "_comment":   "",
        "rdfs:subClassOf": "caliper:Event",
        "caliper:requiredPropertyValueForSequence": ["action=NavigatedTo", "action=Viewed"],
        "caliper:optionalPropertyValueForSequence": ["action=Searched"]
      },
      "caliper:SessionEvent" : {
        "_comment":   "",
        "rdfs:subClassOf": "caliper:Event",
        "caliper:requiredPropertyValueForSequence": ["action=LoggedIn", "action=LoggedOut"],
        "caliper:optionalPropertyValueForSequence": ["action=TimedOut"],
        "caliper:requiredProperty": [
          {
            "@id": "endedAtTime", 
            "caliper:requiredWhen": ["action=LoggedOut", "action=TimedOut"]
          }        
        ]
      },
      "caliper:ViewEvent" : {
        "_comment":   "",
        "rdfs:subClassOf": "caliper:Event"
      }

    }
  ]
}